<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
			name="locationData"
			type="com.example.androidgithubactionssample.model.domain.LocationData" />
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".view.ResultFragment">

		<TextView
			android:id="@+id/cityTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@{locationData.getLocalName()}"
			android:textSize="50sp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="東京" />

		<TextView
			android:id="@+id/latitudeTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@{@string/latitude + locationData.lat}"
			android:textSize="20sp"
			app:layout_constraintEnd_toStartOf="@+id/longitudeTextView"
			app:layout_constraintHorizontal_chainStyle="packed"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/cityTextView"
			tools:text="緯度: 35.6828387" />

		<TextView
			android:id="@+id/longitudeTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="5dp"
			android:text="@{@string/longitude + locationData.lon}"
			android:textSize="20sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/latitudeTextView"
			app:layout_constraintTop_toTopOf="@+id/latitudeTextView"
			tools:text="経度:139.7594549" />
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>